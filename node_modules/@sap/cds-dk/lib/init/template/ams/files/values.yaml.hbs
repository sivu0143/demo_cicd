srv:
    env:
        AMS_DCL_ROOT: ams/dcl

ams-policies-deployer:
    image:
        repository: {{appName}}-ams-policies-deployer
    bindings:
        identity:
            serviceInstanceName: identity
            parameters:
                credential-type: X509_GENERATED
                app-identifier: ams-policy-deployer

identity:
    parameters:
        authorization:
            enabled: true
