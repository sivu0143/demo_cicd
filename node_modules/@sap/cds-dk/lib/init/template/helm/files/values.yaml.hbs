---
# yaml-language-server: $schema=./values.schema.json

global:
  domain: {{{domain}}}
  imagePullSecret:
    name: {{{imagePullSecret}}}
  image:
    registry: {{{registry}}}
    tag: {{{tag}}}
srv:
  bindings: {}
  image:
    repository: {{appName}}-srv
  {{#isJava}}
  env:
    SPRING_PROFILES_ACTIVE: cloud
  {{/isJava}}
  resources:
    limits:
      ephemeral-storage: 1G
      memory: {{#isJava}}1G{{/isJava}}{{^isJava}}500M{{/isJava}}
    requests:
      ephemeral-storage: 1G
      cpu: {{#isJava}}1000m{{/isJava}}{{^isJava}}500m{{/isJava}}
      memory: {{#isJava}}1G{{/isJava}}{{^isJava}}500M{{/isJava}}
  health:
    liveness:
      path: {{#isJava}}/actuator/health/liveness{{/isJava}}{{^isJava}}/health{{/isJava}}
    readiness:
      path: {{#isJava}}/actuator/health/readiness{{/isJava}}{{^isJava}}/health{{/isJava}}
