{
  "name": "{{appName}}-mtx",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/cds-mtxs": "^3",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "cds-serve"{{#isJava}},
    "build": "cds build ../.. --for mtx-sidecar --production && npm ci --prefix gen"{{/isJava}}
  },
  "cds": {
    {{#isJava}}"profiles": ["mtx-sidecar", "java"{{#hasIas}}, "subscription-manager"{{/hasIas}}]{{/isJava}}
    {{#isNodejs}}
      {{^hasIas}}"profile": "mtx-sidecar"{{/hasIas}}
      {{#hasIas}}"profiles": ["mtx-sidecar", "subscription-manager"]{{/hasIas}}
    {{/isNodejs}}
  }
}
