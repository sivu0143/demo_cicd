---
modules:
  - name: {{appName}}-srv
    type: {{language}}
    path: {{& srvPath}}
    requires:
      - name: {{appName}}-destination

  - name: {{appName}}
    type: approuter.nodejs
    requires:
      - name: {{appName}}-destination

  - name: {{appName}}-mtx
    type: nodejs
    path: {{#isNodejs}}gen/{{/isNodejs}}mtx/sidecar
    requires:
      - name: {{appName}}-destination

resources:
  - name: {{appName}}-destination
    type: org.cloudfoundry.managed-service
    parameters:
      service: destination
      service-plan: lite
