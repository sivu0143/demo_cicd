---
modules:
  - name: {{appName}}-srv
    type: {{language}}
    path: {{& srvPath}}
    {{#isJava}}
    properties:
      JBP_CONFIG_JAVA_OPTS:
        from_environment: false
        java_opts: >
          -javaagent:META-INF/.sap_java_buildpack/otel_agent/opentelemetry-javaagent.jar
          -Dotel.javaagent.extensions=META-INF/.sap_java_buildpack/otel_agent_extension/otel-agent-ext-java.jar
      OTEL_METRICS_EXPORTER: cloud-logging
      OTEL_TRACES_EXPORTER: cloud-logging
      OTEL_LOGS_EXPORTER: none
    {{/isJava}}
    requires:
      - name: {{appName}}-cloud-logging
  - name: {{appName}}-mtx
    type: nodejs
    path: {{#isNodejs}}gen/{{/isNodejs}}mtx/sidecar
    requires:
      - name: {{appName}}-cloud-logging
  - name: {{appName}}
    type: approuter.nodejs
    requires:
      - name: {{appName}}-cloud-logging
resources:
  - name: {{appName}}-cloud-logging
    type: org.cloudfoundry.managed-service
    parameters:
      service: cloud-logging
      service-plan: {{cloudLoggingServicePlan}}
      config:
        ingest_otlp:
          enabled: true
